{
  "compilerOptions": {
    "noEmit": true,
    "strictNullChecks": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "lib": ["ES2015", "DOM"],
    "moduleResolution": "node"
  },
  "include": ["*.ts", "*/**/*.ts"]
}
